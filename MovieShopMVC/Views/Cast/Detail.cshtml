@model ApplicationCore.Models.CastDetailsModel



<div class="row" style=" background-color: black; width: 100%; margin: 0px; padding: 0px; color: white;  ">


    <div class="movie-summary" style="padding-left: 200px; display: flex; justify-content: space-around;">
        <div class="col-2" id="movie-poster">
            <img src="@Model.ProfilePath" style="height: 350px; width: 250px; margin-right: 30px;" />
        </div>


        <div class="col-5" id="movie-info" style="padding-top: 10px;">

            <h1>@Model.Name</h1>
            <p style="color: gray;">


                @if (@Model.Gender == "2")
                {
                   <p style="color: gray;"> Male </p>
                    } else
                {
                    <p style="color: gray;">Female </p>
                }
           

            
            <a href="@Model.TmdbUrl"><p>More info...</p></a>
           


        </div>
    </div>

</div>



<div class="row" style="display: flex;  justify-content: center; align-items: center;">
   
    <div class="col-6" style="padding: 50px 50px 50px 0px;">

        
        <div class ="container-fluid" style="justify-content：center;">
            <div class="row">
        
            @foreach (var movie in @Model.Movies)
            {
               
                    <div class="col-6 col-lg-3 col-sm-4 col-xl-2">

                        <a asp-action="Detail" asp-controller="Movie" asp-route-id="@movie.Id">
                            <partial name="_MovieCardPartial" model="movie" />
                        </a>
                        
                        @*<div style="width: 300px;"><p>@movie.Title</p></div>*@
                        

                    </div>
               

            }
      

    </div>

</div>





                



