@model ApplicationCore.Models.PurchaseDetailModel

<div class="card mb-4 ml-5 d-flex">
    <a asp-controller="Movie" asp-action="Detail" asp-route-id="@Model.MovieId">
        <img class="img-fluid" src="@Model.PosterURL" alt="@Model.Title">
    </a>

    <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#PurchaseDetailModal">
        Purchase Details
    </button>




    <!-- movie purchase detail model -->
    <div class="modal fade" id="PurchaseDetailModal" tabindex="-1" aria-labelledby="PurchaseDetailModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Purchase Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex">
                    <img style="width:185px; height: 250px;" src="@Model.PosterURL" alt="@Model.Title" />


                    <div class="container ml-20" style="font-size:smaller; font-weight: bold;">
                        <div class="container d-flex " style="padding: 5px 0px;">
                            <p class="m-1" style="width: 220px;"><i class="far fa-calendar-alt" style="width: 50px;"></i> Purchased Date</p>
                            <p class="m-1"style="padding: 2px 5px;background-color: black; border-radius:10px; color: white;">@Convert.ToDateTime(Model.PurchaseDate).Date.ToString("d")</p>
                        </div>
                        <hr class="m-0" style="border: 1px solid black" />
                        <div class="container d-flex " style="padding: 5px 0px;">
                            <p class="m-1" style="width: 220px;"><i class="fas fa-dollar-sign" style="width: 50px;"></i>Purchased Price</p>
                            <p  class="m-1" style="padding: 2px 5px;background-color: black; border-radius:10px; color: white;">$ @Model.PurchasePrice</p>
                        </div>
                        <hr class="m-0" style="border: 1px solid black" />
                        <div class="container d-flex " style="padding: 5px 0px;">
                            <p class="m-1" style="width: 220px;"><i class="far fa-check-circle" style="width: 50px;"></i>Purchased Number</p>
                            <p class="m-1" style="padding: 2px 5px;background-color: black; border-radius:10px; color: white;">@Model.PurchaseNumber</p>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Watch Now</button>
                </div>
            </div>
        </div>
    </div>



</div>

